mixin recent(post)
  .block-21.mb-4.d-flex
    a.blog-img.mr-4(style=`background-image: url(${post.photo});`)
    .text
      h3
        a(href= post.url)= post.name
      .meta
        div
          a(href= post.url)
            span.icon-calendar
            = post.publishAt
        div
          a(href= post.url)
            span.icon-person
            = post.author.name
        div
          a(href= post.url)
            span.icon-chat
            = post.comments.length
