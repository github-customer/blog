mixin nav()
  li.nav-item.active
    a.nav-link(href= link('')) Home
  if (!user)
    li.nav-item
      a.nav-link(href= link('/sign-up')) Sign up
    li.nav-item
      a.nav-link(href= link('/log-in')) Log in
  else
    li.nav-item
      a.log-out.nav-link(href='/dashboard')= `${user.name}'s dashboard`
    li.nav-item
      a.log-out.nav-link(href='#') Log out
